    <TextView
        android:id="@+id/tvPersonasItemNombre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tvPersonasItemApellido"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tvPersonasItemEdad"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tvPersonasItemDNI"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>